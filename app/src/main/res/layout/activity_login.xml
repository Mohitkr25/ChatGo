<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6ECCFCF"
    tools:context=".activities.loginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radiusedges"
            android:gravity="center"
            android:padding="10dp"
            android:text="chatGo"
            android:textColor="@color/black"
            android:textSize="30sp"

            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radiusedges"
            android:src="@drawable/chattingicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/radiusedges"
            android:elevation="35dp"

            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="15dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:text="Verify your phone number"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiusedges"
                android:text="chat app will send an SMS to verify your number"
                android:textColor="#100101"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/codepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiusedges"
                android:elevation="20dp"
                android:ems="10"
                android:hint="Enter your phone number"
                android:padding="20dp"
                android:phoneNumber="true"
                android:textColorHint="#040404" />

            <Button
                android:id="@+id/nextbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/viewgradient"

                android:elevation="15dp"
                android:text="next" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/radiusedges"
                android:orientation="vertical">

                <Button
                    android:id="@+id/googlebtn"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/radiusedges"
                    android:drawableLeft="@drawable/google"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text="login using google"
                    android:textColor="#070000"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>